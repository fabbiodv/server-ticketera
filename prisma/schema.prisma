generator client {
  provider = "prisma-client-js"
}
enum Role {
  OWNER   // Creador de la productora (líder)
  ADMIN   // Administrador (publica)
  MANAGER // Organizador
  RRPP    // Relaciones públicas
}

model Productora {
  id               Int       @id @default(autoincrement())
  name             String
  code             String    @unique
  profiles         Profile[]
  totalEvents      Int       @default(0)
  activeEvents     Int       @default(0)
  totalOrganizers  Int       @default(0)
  totalRevenue     Float     @default(0)
  status           String
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  profiles Profile[]
}

model Profile {
  id          Int        @id @default(autoincrement())
  userId      Int
  productoraId Int
  role        Role

  user        User       @relation(fields: [userId], references: [id])
  productora  Productora @relation(fields: [productoraId], references: [id])
}
