model Eventos {
  id          Int       @id @default(autoincrement())
  name        String
  date        DateTime
  location    String
  productoraId Int


  usuarios User[] 
  productora Productora @relation(fields: [productoraId], references: [id])
  Entrada Entrada[]
}
model Entrada {
  id          Int       @id @default(autoincrement())
  tipo        String    
  precio      Float     
  eventoId    Int      

  evento     Eventos   @relation(fields: [eventoId], references: [id])
}

model Productora {
  id               Int       @id @default(autoincrement())
  name             String
  email            String    @unique
  code             String    @unique
  profiles         Profile[]
  totalEvents      Int       @default(0)
  activeEvents     Int       @default(0)
  totalOrganizers  Int       @default(0)
  totalRevenue     Float     @default(0)
  status String? @default("active")

  Eventos Eventos[]
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  profiles Profile[]
  Eventos Eventos[]
}

model Profile {
  id          Int        @id @default(autoincrement())
  userId      Int
  productoraId Int
  role        Role

  user        User       @relation(fields: [userId], references: [id])
  productora  Productora @relation(fields: [productoraId], references: [id])
}
