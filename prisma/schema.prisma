datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  OWNER   // Creador de la productora (líder)
  ADMIN   // Administrador (publica) ignorar 
  MANAGER // Organizador
  RRPP    // Relaciones públicas
}
